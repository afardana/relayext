{
  "manifest_version": 3,
  "name": "Pionex Data Relay",
  "version": "1.0",
  "description": "Relays Pionex WebSocket and Fetch data to a local server.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.pionex.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pionex.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.pionex.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
